{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*":         ["./src/*"],
      "@api/*":      ["./src/api/*"],
      "@assets/*":   ["./src/assets/*"],
      "@colors/*":   ["./src/colors/*"],
      "@components/*":["./src/components/*"],
      "@hooks/*":    ["./src/hooks/*"],
      "@router/*":   ["./src/router/*"],
      "@schemas/*":  ["./src/schemas/*"],
      "@types/*":    ["./src/types/*"],
      "@stores/*":   ["./src/stores/*"],
      "@styles/*":   ["./src/styles/*"],
      "@utils/*":    ["./src/utils/*"],
      "@views/*":    ["./src/views/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* 指定編譯目標的 JavaScript 版本 */
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.d.ts", "src/colors/color.ts"]
}
